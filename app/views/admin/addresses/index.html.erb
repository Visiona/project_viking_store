<H3>Addresses</H3>

<h5>Create new addresses from within 
  <%= link_to("User", admin_users_path) %> 
    profiles
</h5>

<div class="table-wrapper">
  <table class="table table-striped">
    <caption></caption>
    <thead>
      <tr>
        <th>ID</th>
        <th>User</th>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Orders</th>
        <th>Created</th>
        <th>SHOW</th>
        <th>EDIT</th>
        <th>DELETE</th>
      </tr>
    </thead>
    <tbody>
      <% @addresses.each do |a| %>
        <tr>
          <td><%= a.id %></td>
          <td><%= link_to("#{a.user.first_name} #{a.user.last_name}", admin_user_path(a.user.id)) %></td>
          <td><%= a.street_address %></td>
          <td><%= a.city.name %></td>
          <td><%= a.state.name %></td>
          <td><%= a.user.orders.count %></td>
          <td><%= a.created_at %></td>
          <td><%= link_to("show", admin_address_path(a.id)) %></td>
          <td><%= link_to("edit", edit_admin_address_path(a.id)) %></td>
          <td><%= link_to("delete", "/admin/users/#{a.id}", :method => "DELETE", data: {confirm: "Are you sure?"}) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
