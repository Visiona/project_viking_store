
<H3>Product Categories</H3>

<div class="button-wrapper">
  <a class="btn btn-primary btn-group btn-group-lg" role="group" href="/admin_portal/new_categ">
    Add a New Category
    </a>
</div>

<div class="table-wrapper">
  <table class="table table-striped">
    <caption></caption>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>SHOW</th>
        <th>EDIT</th>
        <th>DELETE</th>
      </tr>
    </thead>
    <tbody>
      <% all_categories.each do |categ| %>
        <tr>
          <td><%= categ.id %></td>
          <td><%= categ.name %></td>
          <td><a href="admin_portal/<%= categ.id %>">show</a></td>
          <td><a href="/admin_portal/<%= categ.id %>/edit_categ">edit</a></td>
          <td><a href="#">delete</a></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>